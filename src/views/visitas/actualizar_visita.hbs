    {{#if errors }}
              {{#each errors }}
                <p class="alert alert-danger">{{ this.msg }}</p>
              {{/each}}
            {{/if}}

<div class="Container ">                
    <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
        <div class="row ">
        
            <div class="col-md-12 order-md-1">
                <h4 class="mb-3">Formulario de Edicion de datos de ingreso</h4>
                 <form action="/visitas/actualizar_Visita/{{Visitas._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="row">
                        <div class="form-group col-md-6 mb-3">
                            <label for="firstName">Nombre y Apellido</label>
                            <input type="text" class="form-control"  value="{{Visitas.nombres}}" name="nombres" placeholder="Nombre y apellido"
                                >
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">Cedula</label>
                            <input type="text" class="form-control" value="{{Visitas.cedula}}" name="cedula" placeholder="Cedula" >
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="email">E-mail <span class="text-muted">(Opcional)</span></label>
                            <input type="email" class="form-control" value="{{Visitas.email}}" name="email" placeholder="you@example.com">
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="username">Telefono</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-phone" aria-hidden="true"></i></span>
                                </div>
                                <input type="text" class="form-control" value="{{Visitas.telefono}}" name="telefono" placeholder="Telefono" >
                                <div class="invalid-feedback" style="width: 100%;">
                                    is required.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="username">Temperatura</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-thermometer-three-quarters"
                                            aria-hidden="true"></i></span>
                                </div>
                                <input type="text" class="form-control" value="{{Visitas.temperatura}}" name="temperatura" placeholder="Temperatura"
                                    >
                                <div class="invalid-feedback" style="width: 100%;">
                                    is required.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label >Genero</label>
                            <select class="custom-select d-block w-100" value="" name="genero">
                                <option>{{Visitas.genero}}</option>
                                <option>Hombre</option>
                                <option>Mujer</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-5 mb-3">
                            <label>Direccion de Residencia</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-home" aria-hidden="true"></i></span>
                                </div>
                                <input type="text" class="form-control" value="{{Visitas.direccion}}" name="direccion" placeholder="Direccion"
                                   >
                                <div class="invalid-feedback" style="width: 100%;">
                                    is required.
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label>Lugar de visita</label>
                            <select class="custom-select d-block w-100"  name="lugarVisita">
                                <option>{{Visitas.lugarVisita}}</option>
                                <option>Laboratorios</option>
                                <option>Oficinas Falcultad</option>
                                <option>Registro y control</option>
                                <option>Biblioteca</option>
                                <option>Bienestar</option>
                            </select>
                            <div class="invalid-feedback">
                                ------.
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label>Nota de Visita</label>
                            <textarea type="text" class="form-control" name="nota" placeholder="">{{Visitas.nota}}</textarea>
                        </div>
                    </div>

                    <hr class="mb-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="same-address">
                        <label class="custom-control-label" for="same-address">Shipping address is the same as my
                            billing address</label>
                    </div>

                    <hr class="mb-4">
                    <div class="row"> 
                        <div class="col-md-3 mb-3">  <button class="btn btn-primary btn-lg btn-block " type="submit">Actualizar Datos</button></div>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>

</div>