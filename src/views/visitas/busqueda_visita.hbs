


<div class="row">
 {{#each reporte}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    <a href="/visitas/actualizarVisita/{{_id}}"><i
                            class=" btn btn-primary btn-block btn-sm fas fa-edit"></i></a>
                </h4>
               
                <!--title is username-->
                <p>{{nombres}}</p>
                <p>{{cedula}}</p>
                <p>{{telefono}}</p>
                <p>{{temperatura}} grados</p>
                <p>{{genero}}</p>
                <p>{{lugarVisita}}</p>
                <p>{{Rol_visitante}}</p>
                <p>{{dateEntrada}}</p>
                <p>{{dateSalida}}</p>
                <p>{{nota}}</p>
                <form action="/visitas/salirVisita/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola, {{user.name}}</h1>
            <p clsss="lead">No hay usuarios registrados a√∫n.</p>
            <a href="/notes/add" class="btn btn-success btn-block">Registra uno!</a>
        </div>
    </div>
    {{/each}}
</div>